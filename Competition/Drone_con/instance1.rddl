non-fluents nf_simple_drone_p0{
	domain = kinematic_drones_con;

	objects {
		aircraft : {a1, a2};
	};

	non-fluents {
        // Bounds on the position of the aircraft
        MIN_X = -50000.0;
        MAX_X = 500000.0;
        MIN_Y = -500000.0;
        MAX_Y = 500000.0;
        MIN_Z = -50000.0;
        MAX_Z = 50000.0;

        GRAVITY = 9.8;

        SCALE_FACTOR = 0.1;

        // Speed bounds
        MIN_VEL(a1) = -1.0;
        MAX_VEL(a1) = 1.0;
        MIN_PHI(a1) = -1.0;
        MAX_PHI(a1) = 1.0;
        MIN_THETA(a1) = -1.0;
        MAX_THETA(a1) = 1.0;

        GOAL_X(a1) = 50.0;
        GOAL_Y(a1) = 50.0;
        GOAL_z(a1) = 50.0;

        CONTROLLABLE(a1);
	};
}

instance simple_drone_p0 {
	domain = kinematic_drones_con;
	non-fluents = nf_simple_drone_p0;
	
	init-state {
	pos_x(a1) = 0.0;
        pos_y(a1) = 0.0;
        pos_z(a1) = 0.0;


        vel(a1) = 0.1;

        psi(a1) = 0.0;
        phi(a1) = 0.0;
        theta(a1) = 0.0;


 	};

	max-nondef-actions = pos-inf;
	horizon  = 20;
	discount = 1.0;

}